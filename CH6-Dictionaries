# DICTIONARIES
# simple example of dictionary and its key/value pairs
alien_0 = {'color': 'green', 'points': 5}
print(alien_0['color']) #a access values in dictionary by calling key in []
print(alien_0['points'])

# asigning values to new variable for recall
new_score = alien_0['points']
print(f'You just scored {new_score} points!')

# Adding information to dictionary
print('\n')
alien_0['x_position'] = 0
alien_0['y_position'] = 25
print(alien_0)

# Startin with an EMPTY dictionary
print('\n')
alien_0 = {}
alien_0['color'] = 'green'
alien_0['points'] = 5
print(alien_0)

# modifying position of player in game example
print("\n")
alien_0 = {'x_position': 0, 'y_position': 25, 'speed': 'medium'}
print(f"Original position: {alien_0['x_position']}")

# move the alien to the right
#Determine how far to move the alien based on its current speed
if alien_0['speed'] == 'slow':
    x_increment = 1
elif alien_0['speed'] == 'medium':
    x_increment = 2
else:
    # fast alien
    x_increment = 3

# The new position is the old position plus the increment
alien_0['x_position'] = alien_0['x_position'] + x_increment

print(f"New position: {alien_0['x_position']}") #looks like "" work better without much thought or escapes


# REMOVING key value pairs
print('\n')
alien_0 = {'color': 'green', 'points': 5}
print(alien_0)

# deletes the key/value 'points PERMANENTLY
del alien_0['points']
print(alien_0)

# Dictionary of similar objects
print('\n')
favorite_languages = {
    'jen': 'python',
    'sarah': 'c',
    'edward': 'go',
    'phil': 'javascript',
}
print(f"Sarah's favorite language is: {favorite_languages['sarah'].title()}.")
# optionally you can save it in a variable
language = favorite_languages['sarah'].title()
print(f"Sarah's favorite language is: {language}.")

# using the GET() method to retrieve key 
# get produces a default value if the key doesn't exist instead of an errror
# second value in GET() is the default value it assigns
print("\n")
alien_0 = {'color': 'green', 'points': 5}
point_value = alien_0.get('points', 'no point value assigned')
print(point_value)
point_value = alien_0.get('point', 'no point value assigned') # used 'point' to produce default
print(point_value)
# if no second value is assigned for GET(), you get 'none'
# none is a special value in python that means 'no value exists' and is NOT an error

